

<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row mt-3">
        <div class="col-8 off-set-2">
            <h3>edit your listing </h3>
            <br/>
            <br/>
            <form method="POST" action="/listings/<%=listings._id%>?_method=Put">
                <div class="mb-3">
                    <label for="title" class="form-label">ENTER TITLE</label>
                    <input name="Listing[title]" value="<%=listings.title%>" type="text" class="form-control">
                </div>
                <div class="mb-3">
                   <label for="description" class="form-label">ENTER DESCRIPTION</label>
                    <textarea name="Listing[description]"  class="form-control"><%=listings.description%> ></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">ENTER IMAGE URL</label>
                     <input name="Listing[image]" value="<%=listings.image%>" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">ENTER PRICE</label>
                    <input name="Listing[price]" value="<%=listings.price%>"type="number" class="form-control">
                 </div>
                 <div class="mb-3">
                    <label for="country" class="form-label">ENTER COUNTRY</label>
                     <input name="Listing[country]" value="<%=listings.country%>" type="text" class="form-control">
                 </div>
        
                 <div class="mb-3">
                    <label for="location" class="form-label">ENTER LOCATION</label>
                    <input name="Listing[location]"value="<%=listings.location%>" type="text"  class="form-control">
                </div>
                <button class="btn btn-dark add-btn mt-3" >edit</button>
            </form>
        </div>
    </div>
   
    
</body>
