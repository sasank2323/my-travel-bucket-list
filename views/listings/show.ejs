<% layout("/layouts/boilerplate.ejs") %>
<body>

  <div class="row mt-3">
    <div class="col-8 off-set-2">
      <div class="card col " >
        <img src="<%=listings.image%>" class="card-img-top show-img" alt="listing_image" style="height:20rem;"/>
      </div>
        <ul>
          <br/>
          <li> <%=listings.title%></li>
          <br/>
          <li> <%=listings.description%></li>
          <br/>
            <li>&#8377; <%=listings.price%></li>
            <br/>
            <li> <%=listings.country%></li>
            <br/>
            <li> <%=listings.location%></li>
        </ul>
       <a href="/listings/<%=listings._id%>/edit" class="btn btn-dark">TO EDIT</a>
       <br/>
       <br/>
       <form method="POST" action="/listings/<%=listings._id%>?_method=DELETE">
        <button class="btn btn-dark">TO DELETE</button>
       </form>
        
    </div>
  </div>
  
</body>